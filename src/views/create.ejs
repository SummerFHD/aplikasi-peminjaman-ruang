<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Basic Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
      /* Custom styles for the layout */
      body {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }
      .sidenav {
        height: 100%;
        width: 250px;
        position: fixed;
        top: 0;
        left: 0;
        background-color: #508BFC ;
        padding-top: 20px;
      }
      .sidenav a {
        padding: 10px 30px;
        text-decoration: none;
        font-size: 18px;
        color: #fff;
        display: block;
      }
      .sidenav a:hover {
        background-color: #709ef5;
			}
      .main-content {
        margin-left: 250px; /* Same as the width of the sidenav */
        padding: 20px;
        flex: 1;
      }
      footer {
        background-color: #f8f9fa;
        text-align: center;
        padding: 10px;
      }
    </style>
  </head>
  <body>
    <!-- Sidenav -->
    <div class="sidenav">
			<h4 class="fw-bold mt-3 mb-4" style="color: white; text-align: center;">Dashboard</h4>
      <a href="#index">Ruangan</a>
      <a href="#logout">Logout</a>
    </div>

    <!-- Main content -->
    <div class="main-content">
			<div class="container mt-5">
				<form method="POST" action="/create">
					<div class="mb-3">
						<label class="form-label">Pilih Ruangan</label>
						<select class="form-select" name="room_id">
							<option selected>Pilih Ruangan</option>
							<% rooms.forEach(room => { %>
								<option value="<%= room.id %>"><%= room.name %></option>
							<% }); %>
						</select>
					</div>
					<div class="mb-3">
						<label class="form-label">Pilih User</label>
						<select class="form-select" name="user_id">
							<option selected>Pilih User</option>
							<% users.forEach(user => { %>
								<option value="<%= user.id %>"><%= user.email %></option>
							<% }); %>
						</select>
					</div>
					<div class="mb-3">
						<label class="form-label">Check In</label>
						<input type="date" class="form-control" name="check_in">
					</div>
					<div class="mb-3">
						<label class="form-label">Check Out</label>
						<input type="date" class="form-control" name="check_out">
					</div>
					<button type="submit" class="btn btn-primary">Submit</button>
				</form>
			</div>
    </div>

    <!-- Footer -->
    <footer>
      <p class="mt-3 text-center">&copy; 2024 UTS Pemrograman Web Lanjut</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
